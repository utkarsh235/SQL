create table worker(
worker_id int(10) not null,
first_name varchar(20),
last_name varchar(20),
salary int(10),
joining_date date,
department varchar(20),
primary key (worker_id)
);

create table bonus(
worker_ref_id int(10) not null,
bonus_amount int(10),
bouns_date date
);

create table title(
worker_ref_id int(10) not null,
worker_title varchar(20),
affected_from date 
);

